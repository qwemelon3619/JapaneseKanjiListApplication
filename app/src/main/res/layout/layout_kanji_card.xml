<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content">
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/Kanji_card"
        android:layout_width="@dimen/KanjiCard_width"
        android:layout_height="@dimen/KanjiCard_height"
        android:layout_margin="@dimen/KanjiCard_margin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:clickable="true"
        android:focusable="true"
        app:cardElevation="@dimen/KanjiCard_Elevation">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:id="@+id/kanji"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/KanjiCard_margin"
                android:text="二"
                android:textSize="@dimen/KanjiCard_Kanji_textSize" />
            <TextView
                android:id="@+id/kanji_korean"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                android:text="일이 삼"
                android:textAlignment="center"
                android:textSize="@dimen/KanjiCard_Korean_textSize" />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>
</androidx.constraintlayout.widget.ConstraintLayout>